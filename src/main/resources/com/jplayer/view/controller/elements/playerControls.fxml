<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="3.0" xmlns="http://javafx.com/javafx/null">

    <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
        <Label fx:id="labelCurrentPosition" text="00:00"/>
        <ProgressBar fx:id="currentPosition" maxWidth="Infinity" progress="0.0" HBox.hgrow="ALWAYS"/>
        <Label text="00:00"/>
    </HBox>
    <BorderPane>
        <center>
            <HBox alignment="CENTER" spacing="5.0">
                <AnchorPane prefWidth="200.0">
                    <Button layoutX="88.0" minWidth="25.0" mnemonicParsing="false"
                            onAction="#onPlayButtonClicked" text="&gt;">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </Button>
                    <Button onMouseClicked="#onPlayButtonClicked" layoutX="56.0" mnemonicParsing="false"
                            text="&lt;&lt;">
                        <opaqueInsets>
                            <Insets/>
                        </opaqueInsets>
                    </Button>
                    <Button layoutX="113.0" mnemonicParsing="false" text="&gt;&gt;"/>
                    <ProgressBar fx:id="soundBar" layoutX="153.0" layoutY="9.0" minHeight="11.0" minWidth="11.0"
                                 onMouseClicked="#onSoundClicked" onScroll="#onSoundScroll" prefHeight="11.0"
                                 prefWidth="50.0" progress="0.72"/>
                    <ToggleButton layoutX="26.0" mnemonicParsing="false" text="R"/>
                    <ToggleButton layoutX="2.0" mnemonicParsing="false" text="S"/>
                </AnchorPane>
            </HBox>
        </center>
        <left>
            <ProgressIndicator maxHeight="22.0" maxWidth="22.0" visible="false" BorderPane.alignment="CENTER"/>
        </left>
    </BorderPane>

    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</VBox>
